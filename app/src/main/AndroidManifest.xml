<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/intellihome"
        android:label="IntelliHome"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiPrimerAplicacion"
        tools:targetApi="31">

        <activity android:name=".LoginActivity"></activity>

        <activity
            android:name=".PrincipalActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".PruebaActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".monitoreo_acti"
            android:exported="true">
        </activity>
        <activity
            android:name=".AlquiladorActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".ArrendadorActivity"
            android:exported="true">
        </activity>

    </application>
</manifest>
