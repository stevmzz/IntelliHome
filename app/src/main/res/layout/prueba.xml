<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_surface"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Wave shape at the top -->
        <View
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/wave_background"/>

        <!-- Main content container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="-50dp">

            <!-- Logo y tÃ­tulos -->
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:cardCornerRadius="50dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imageLogo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:src="@drawable/logo"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Register"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Create your new account"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"/>
            <!-- Personal Information Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Full Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="@color/primary_blue"
                app:errorEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:inputType="textPersonName|textCapWords"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Username -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:startIconDrawable="@drawable/ic_user"
                app:startIconTint="@color/primary_blue"
                app:errorEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:startIconDrawable="@drawable/ic_email"
                app:startIconTint="@color/primary_blue"
                app:errorEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Security Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Password -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="@color/primary_blue"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ojo_contra"
                app:endIconTint="@color/text_secondary"
                app:errorEnabled="true"
                app:helperText="Must include: uppercase, lowercase, number, special character"
                app:helperTextEnabled="true"
                app:errorIconDrawable="@null"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Confirm Password -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirmPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="@color/primary_blue"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ojo_contra"
                app:endIconTint="@color/text_secondary"
                app:errorEnabled="true"
                app:errorIconDrawable="@null"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>
            <!-- Profile Photo Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Photo"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/divider">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageViewPhoto"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/photo_background"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonSelectPhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gallery"
                            android:layout_marginEnd="8dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:icon="@drawable/ic_gallery"
                            app:iconTint="@color/primary_blue"
                            android:textColor="@color/primary_blue"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonTakePhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Camera"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:icon="@drawable/ic_camera"
                            app:iconTint="@color/primary_blue"
                            android:textColor="@color/primary_blue"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Profile Information -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Information"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Description -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:startIconDrawable="@drawable/ic_description"
                app:startIconTint="@color/primary_blue"
                app:errorEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Describe Yourself"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:gravity="top"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Hobbies -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:startIconDrawable="@drawable/ic_hobbies"
                app:startIconTint="@color/primary_blue"
                app:errorEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hobbies"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:gravity="top"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Contact Information -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Information"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <!-- Phone -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:startIconDrawable="@drawable/ic_phone"
                app:startIconTint="@color/primary_blue"
                app:errorEnabled="true"
                app:counterEnabled="true"
                app:counterMaxLength="8"
                app:helperText="Enter 8 digits"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:maxLength="8"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Security Question -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="@color/primary_blue"
                app:errorEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Verificacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Verification: Â¿Favorite food?"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- IBAN -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:startIconDrawable="@drawable/ic_bank"
                app:startIconTint="@color/primary_blue"
                app:errorEnabled="true"
                app:helperText="Format: CR + 20-25 numbers"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Iban"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="IBAN Account"
                    android:inputType="textCapCharacters"/>
            </com.google.android.material.textfield.TextInputLayout>
            <!-- Additional Information Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional Information"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <!-- User Type Selection -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/divider">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Type"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"/>

                    <RadioGroup
                        android:id="@+id/userTypeGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioArrendador"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Arrendador"
                            android:layout_marginEnd="32dp"/>

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radioAlquilador"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alquilador"/>
                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Birth Date -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:startIconDrawable="@drawable/ic_calendar"
                app:startIconTint="@color/primary_blue"
                app:errorEnabled="true"
                app:helperText="Format: DD/MM/YYYY"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fechaNacimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Birth Date"
                    android:inputType="date"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Terms and Conditions Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Terms and Conditions"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="IntelliHome"
                        android:textColor="@color/primary_blue"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"/>

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <!-- TÃ©rminos detallados -->
                            <TextView
                                style="@style/TermsHeader"
                                android:text="1. Service Terms"/>

                            <TextView
                                style="@style/TermsContent"
                                android:text="By using IntelliHome's services, you agree to these binding terms. Our platform connects property owners with potential renters, facilitating secure and efficient property management."/>

                            <TextView
                                style="@style/TermsHeader"
                                android:text="2. User Responsibilities"/>

                            <TextView
                                style="@style/TermsContent"
                                android:text="â¢ Maintain accurate profile information\nâ¢ Respect property listings and communication guidelines\nâ¢ Follow local housing laws and regulations\nâ¢ Report any suspicious activities"/>

                            <TextView
                                style="@style/TermsHeader"
                                android:text="3. Privacy &amp; Data Protection"/>

                            <TextView
                                style="@style/TermsContent"
                                android:text="We protect your personal information according to GDPR and local privacy laws. Your data is encrypted and securely stored."/>

                            <TextView
                                style="@style/TermsHeader"
                                android:text="4. Financial Terms"/>

                            <TextView
                                style="@style/TermsContent"
                                android:text="â¢ All transactions are processed securely\nâ¢ Service fees are clearly displayed\nâ¢ Cancellation policies apply as specified"/>

                            <TextView
                                style="@style/TermsHeader"
                                android:text="5. Property Guidelines"/>

                            <TextView
                                style="@style/TermsContent"
                                android:text="â¢ Accurate property descriptions required\nâ¢ Regular maintenance expectations\nâ¢ Safety standards compliance"/>
                        </LinearLayout>
                    </androidx.core.widget.NestedScrollView>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/termsCheckbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="I have read and accept the terms and conditions"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonReject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reject"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:textColor="@color/error"
                            android:layout_marginEnd="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonAccept"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accept"
                            android:backgroundTint="@color/primary_blue"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Continue Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonContinue"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Continue"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                android:backgroundTint="@color/primary_blue"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>